<% @importages.each do |importage| %>
  <tr>
    <td><%= importage.mix_id %></td>
    <td><%= importage.mix_id ? Mix.where(id: importage.mix_id).pluck(:name).to_a : '' %></td>
    <td><%= importage.library_id %></td>
    <td><%= importage.sample_id %></td>
    <td><%= importage.simple_volume %></td>
    <td><%= link_to 'Show', importage %></td>
    <td><%= link_to 'Edit', edit_importage_path(importage) %></td>
    <td><%= link_to 'Destroy', importage, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

