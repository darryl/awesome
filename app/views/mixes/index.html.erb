<h1>Listing mixes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Musician</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mixes.each do |mix| %>
  <tr>
    <td><%= mix.name %></td>
    <td><%= mix.desc %></td>
    <td><%= mix.musician_id %></td>
    <td><%= link_to 'Show', mix %></td>
    <td><%= link_to 'Edit', edit_mix_path(mix) %></td>
    <td><%= link_to 'Destroy', mix, :confirm => 'Are you sure?', :method => :delete %></td>
<td><%= link_to 'tracker', "/mixes/#{mix.id}/tracker" %></td>
  </tr>
<% end %>
</table>

