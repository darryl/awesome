<%= form_for(@sample, :html => {:multipart => true}) do |f| %>
  <% if @sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sample.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul>
      <% @sample.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :audio %> (ogg, mp3, or wav work in chrome, no mp3 support in firefox. keep the file sizes small or it will take forever to load) <br />
    <%= f.file_field :audio %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :desc %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
